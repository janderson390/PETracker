<!DOCTYPE html>
<html lang="en">

<head>
  <title>DB Info</title>
  <meta charset="UTF-8">
</head>

<body>

  <h1>Database Tables</h1>
  <ul>
    <% tables.forEach(function(r) { %>
      <li>
        <%= r.table %>: <%= r.column %> (<%= r.type %>)
      </li>
      <%}); %>
  </ul>
  <h1>Observations</h1>
  <ul>
    <% obs.forEach(function(r) { 
    
    const tasks = [
      'Planned Pres.',
      'Response Pres.', 
      'Monitoring', 
      'Perform Feedback', 
      'Motivation Feedback', 
      'Begin/End Class', 
      'Equipment Management', 
      'Organization', 
      'Behavior Management', 
      'Other Tasks'
    ];
    
    %> 
      <li><%= tasks[r.tasks_id - 1] %> for <%= r.duration.minutes || "00" %>:<%= r.duration.seconds || "00" %></li>
    <% }); %> 
  </ul>
</body>

</html>